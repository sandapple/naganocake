<!DOCTYPE html>
<html>
  <head>
    <tn><title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %></tn>
  </head>

  <body>
     <header>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>logo</span></a>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse" id="navbarNavDropdown" style="">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>


          <li>
            <%= link_to user_path(current_user.id) do %>
           <i class="fas fa-home"></i> About
            <% end %>
          </li>
          <li>
               <%= link_to users_path,class:"nav-link text-light" do %>
               <i class="fas fa-users"></i> 商品一覧
               <% end %>
          </li>
          <li>
             <%= link_to books_path ,class:"nav-link text-light" do %>
            <i class="fas fa-book-open"></i> 新規登録
             <% end %>
            </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete,class:"nav-link text-light" do %>
            <i class="fas fa-sign-out-alt"></i> ログイン
            <% end %>
            </li>
          <% else %>
          <li>
            <tr><%= link_to admin_items_url,class:"nav-link text-light" do %>
            <i class="fas fa-home"></i> 商品一覧
            <% end %>
          </li>
          <li>

             <%= link_to  admin_customers_url ,class:"nav-link text-light" do %>
            <i class="fas fa-link"></i> 会員一覧
             <% end %>
         </li>
          <li>
             <%= link_to admin_homes_top_url,class:"nav-link text-light" do %>
            <i class="fas fa-user-plus"></i> 注文履歴
             <% end %>
          </li>
          <li>
            <%= link_to admin_genres_url,class:"nav-link text-light" do %>
          <i class="fas fa-sign-in-alt"></i> ジャンル一覧
            <% end %>
          </li>
          <li>
            <%= link_to customer_session_url,class:"nav-link text-light" do %>
          <i class="fas fa-sign-in-alt"></i> ログアウト
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  </header>
    <%= yield %>
    </div>
  </div>
  </body>
</html>

