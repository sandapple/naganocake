<h2>商品新規登録</h2>

<div>
  <main>
<%= form_with model: @item,url: admin_items_path, method: :post do |f| %>
  <<label for="inputImage"商品画像</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*"%>
  <label for="inputName">商品名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名", size: "40"%>
  <label for="inputintroduction">商品説明</label>
  <%= f.text_field :introduction, placeholder: "商品説明", size: "50" %>
  <label for="inputGenre">ジャンル</label>
  <%= f.collection_select :genre_id,Genre.all, :id, :name, { include_blank: '選択してください'}%>
  <label for="inputPrice">税抜価格</label>
  <%= f.text_field :price, placeholder:"1000" %>
  <%= f.radio_button :is_active, :true %>販売中
  <%= f.radio_button :is_active, :false %>販売停止中
  <%= f.submit "新規登録" %>
<% end %>
  </main>
</div>